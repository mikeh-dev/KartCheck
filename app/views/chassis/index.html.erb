<div class="container mx-auto px-6 py-8">
  <h2 class="text-2xl font-semibold text-gray-800 mb-3">Your Chassis</h2>
    <% @chassis.each do |chassis| %>
      <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col">
        <div class="mb-4">
          <span class="block text-gray-700 text-sm font-bold mb-2"><%= chassis.number %></span>
          <%= link_to 'Edit', edit_chassis_path(chassis), class: 'text-blue-500 hover:text-blue-800' %>
        </div>
      </div>
    <% end %>
</div>