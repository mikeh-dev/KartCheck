<div class="container mx-auto px-6 py-8">
    <h2 class="text-2xl font-semibold text-gray-800 mb-3">Your Engines</h2>
    <% @engines.each do |engine| %>
      <%= button_to edit_engine_path(engine), method: :get, class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col w-full', data: { turbo_action: 'replace' } do %>
      <div class="mb-4">
        <span class="block text-gray-700 text-sm font-bold mb-2"><%= engine.engine_number %></span>
        <span class='text-blue-500 hover:text-blue-800'>Edit</span>
      </div>
      
<% end %>



    <% end %>
</div>