
<div class="mt-8">
    <h2 class="text-2xl font-semibold text-gray-800 mb-3">Your Engines</h2>
    <% @engines.each do |engine| %>
      <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col">
        <div class="mb-4">
          <span class="block text-gray-700 text-sm font-bold mb-2"><%= engine.engine_number %></span>
          <%= link_to 'Edit', edit_engine_path(engine), class: 'text-blue-500 hover:text-blue-800' %>
        </div>
      </div>
    <% end %>
  </div>