<section class="bg-center bg-no-repeat bg-cover bg-gray-700 bg-blend-multiply">
  <div class="px-4 py-8 sm:p-16">
    <h1 class="text-3xl font-bold text-white mb-4"><%= @track.name %></h1>

    <% if @track.image.attached? %>
      <div class="grid grid-cols-2 gap-4 mb-8">
        <%= image_tag(@track.image) %>
      </div>
    <% end %>

    <ul class="list-disc list-inside mb-8">
      <li>Address: </li>
      <li>Distance:  miles</li>
      <li>Created: </li>
    </ul>
    
    <%= button_to edit_track_path(@track), method: :get, class: "inline-flex justify-center items-center py-3 px-5 mr-4 text-base font-medium text-center text-white rounded-lg bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-900", remote: true do %>
      Edit
    <% end %>

    <%= button_to @track, method: :delete, data: { confirm: "Are you sure you want to delete this track?" }, class: "inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-white rounded-lg bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 dark:focus:ring-red-900", remote: true do %>
      Delete
    <% end %>

  </div>
</section>

