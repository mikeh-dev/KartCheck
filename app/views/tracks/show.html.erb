
<section class="bg-center bg-no-repeat bg-cover bg-gray-700 bg-blend-multiply">
  <div class="px-4 py-8 sm:p-16">
    

    <% if @track.image.attached? %>
        <%= image_tag(@track.image) %>
    <% end %>


  </div>
</section>

<section class="relative md:pb-24 pb-16 mt-10">
            <div class="container mx-auto">
                <div class="md:flex">
                    <div class="lg:w-2/3 md:w-1/2 md:p-4 px-3">
                        <h1 class="text-3xl font-bold text-black mb-4"><%= @track.name %></h1>

                        <h4 class="text-2xl font-medium"><%= @track.address %></h4>

                        <ul class="py-6 flex items-center list-none">
                            <li class="flex items-center lg:mr-6 mr-4">
                                <i class="uil uil-compress-arrows lg:text-3xl text-2xl ltr:mr-2 rtl:ml-2 text-green-600"></i>
                                <span class="lg:text-xl">Track Length: <%= @track.length %> Metres</span>
                            </li>
                        </ul>

                        <p class="text-slate-400"><%= @track.overview %></p>
                    
                        <div class="w-full leading-[0] border-0 mt-6">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2398.9692374673677!2d-0.6625635867613725!3d53.03889019756656!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4878362d729a50f1%3A0x738a765849950a00!2sPF%20International%20Kart%20Circuit!5e0!3m2!1sen!2suk!4v1684370014265!5m2!1sen!2suk" style="border:0" class="w-full h-[500px]" allowfullscreen></iframe>
                        </div>
                    </div>

                    <div class="lg:w-1/3 md:w-1/2 md:p-4 px-3 mt-8 md:mt-0">
                        <div class="sticky top-20">
                            <div class="rounded-md bg-slate-50 dark:bg-slate-800 shadow dark:shadow-gray-700">
                                <div class="p-6">
                                    <h5 class="text-2xl font-medium">Details:</h5>

                                    <div class="flex justify-between items-center mt-4">
                                        <span class="text-xl font-medium"><%= @track.website %></span>
                                        <span class="bg-green-600/10 text-green-600 text-sm px-2.5 py-0.75 rounded h-6">Visit</span>
                                    </div>
    
                                    <ul class="list-none mt-4">
                                        <li class="flex justify-between items-center">
                                            <span class="text-slate-400 text-sm">Next Race Meeting in:</span>
                                            <span class="font-medium text-sm">124 Days</span>
                                        </li>
    
                                        <li class="flex justify-between items-center mt-2">
                                            <span class="text-slate-400 text-sm">Race Entry Fee</span>
                                            <span class="font-medium text-sm">£ 165</span>
                                        </li>
    
                                        <li class="flex justify-between items-center mt-2">
                                            <span class="text-slate-400 text-sm">Test Day Fee</span>
                                            <span class="font-medium text-sm">£70</span>
                                        </li>
                                    </ul>
                                </div>
    
                                <div class="flex p-5">
                                    <div class="p-1 w-1/2">
                                        <%= link_to "Book a Test Day", "#", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center mr-3 md:mr-0 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
                                    </div>
                                    <div class="p-1 w-1/2">
                                        <%= link_to "Enter Next Race", "#", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center mr-3 md:mr-0 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
                                    </div>
                                </div>
                            </div>

                            
                        </div>
                    </div>
                </div>
            </div>
        </section><!--end section-->
        <!-- End Hero -->
</div>

